<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/fragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="statistics"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/readexpro_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/fragmentLine"
        android:layout_width="0dp"
        android:layout_height="7dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/title_fragment_line"
        app:layout_constraintStart_toEndOf="@id/fragmentTitle"
        app:layout_constraintTop_toTopOf="@id/fragmentTitle"
        app:layout_constraintBottom_toBottomOf="@id/fragmentTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:importantForAccessibility="no" />

</androidx.constraintlayout.widget.ConstraintLayout>
