<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ================== BOTTOM NAVIGATION ================== -->
    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">40dp</item>
        <item name="itemTextColor">?attr/colorOnPrimary</item>
        <item name="itemIconTint">@null</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <!-- ================== TOOLBAR ================== -->
    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorPrimary</item>
        <item name="subtitleTextColor">?attr/colorPrimary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/belanosima_regular</item>
    </style>

    <style name="ToolbarPointsContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_container_points</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ToolbarPointsTextStyle">
        <item name="android:textColor">@color/yellow_500</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/belanosima_regular</item>
    </style>

    <style name="ToolbarIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:tint">@color/yellow_500</item>
    </style>

    <!-- ================== SLIDER ================== -->
    <style name="CustomSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/CustomSliderLabelStyle</item>
        <item name="trackHeight">8dp</item>
    </style>

    <style name="CustomSliderLabelStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/white_100</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>


    <!-- ================== BUTTON ================== -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="CustomPinkButtonStyle" parent="CustomButtonStyle">
        <item name="backgroundTint">@color/pink_500</item>
    </style>

    <style name="CustomBlueButtonStyle" parent="CustomButtonStyle">
        <item name="backgroundTint">@color/blue_500</item>
    </style>

    <style name="CustomYellowButtonStyle" parent="CustomButtonStyle">
        <item name="backgroundTint">@color/yellow_500</item>
    </style>

    <!-- ================== FORM ================== -->
    <style name="CustomFormContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="CustomFormLabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/readexpro_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="CustomFormInputBoxStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">@color/white_100</item>
        <item name="android:textColorHint">@color/gray_500_50</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:fontFamily">@font/readexpro_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="CustomFormDateBoxStyle" parent="CustomFormInputBoxStyle">
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:inputType">date</item>
    </style>
</resources>
